{
  "name": "async-utils",
  "version": "1.0.0",
  "description": "Utilities for an asyncronous world",
  "main": "lib/index.js",
  "types": "lib/index.d.js",
  "scripts": {
    "build": "./node_modules/.bin/tsc",
    "lint": "./node_modules/.bin/tslint -c tslint.json -p tsconfig.json",
    "test": "npm run build && ./node_modules/.bin/jasmine lib/**/*_spec.js",
    "validate": "npm run test && npm run lint",
    "install": "([ -d ./src ] && [ ! -d ./lib ] && mkdir lib && npm install . &&  npm run build) || echo ''",
    "prepare": "npm run build",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "async",
    "promise",
    "future",
    "utilities",
    "await"
  ],
  "author": "Ethan Ferrari <github@ethanferrari.com>",
  "license": "MIT",
  "dependencies": {
    "core-decorators": "^0.20.0",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@types/jasmine": "^2.8.16",
    "@types/lodash": "^4.14.121",
    "@types/node": "^10.12.10",
    "jasmine": "^3.2.0",
    "tslint": "^5.11.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3"
  }
}
